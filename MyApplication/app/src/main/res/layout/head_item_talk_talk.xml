            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/talk_talk_head_img1"
                    style="@style/talk_talk_head_item_img" />
                <TextView
                    android:id="@+id/talk_talk_head_tv1"
                    style="@style/talk_talk_head_item_tv" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/talk_talk_head_item_card">
