                <TextView
                    android:id="@+id/talk_talk_head_tv2"
                    style="@style/talk_talk_head_item_tv" />
            </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/talk_talk_head_item_card">
