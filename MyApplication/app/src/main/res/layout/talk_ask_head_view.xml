<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <RadioButton
                  android:drawableTop="@mipmap/law"
                  android:text="法律"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/health2"
                  android:text="健康"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/car"
                  android:text="汽车"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/caijing"
                  android:text="财经"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/history"
                  android:text="历史"
                  style="@style/talk_ask_tv"/>

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <RadioButton
                  android:drawableTop="@mipmap/zhengzhi"
                  android:text="时政"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/sport"
                  android:text="体育"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/army"
                  android:text="军事"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/travel"
                  android:text="旅游"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/house"
                  android:text="房产"
                  style="@style/talk_ask_tv"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <RadioButton
                  android:drawableTop="@mipmap/science"
                  android:text="科技"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/education"
                  android:text="教育"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/entertainment"
                  android:text="娱乐"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/health"
                  android:text="生活"
                  style="@style/talk_ask_tv"/>
              <RadioButton
                  android:drawableTop="@mipmap/fashion"
                  android:text="时尚"
                  style="@style/talk_ask_tv"/>
          </LinearLayout>
          <ImageView
              android:id="@+id/talk_ask_tlt_img"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/upbtn"
              android:layout_gravity="center"/>
      </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>